{
  "version": 2,
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "client/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "/server" },
    { "src": "/(.*)", "dest": "/client" }
  ],
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "dist"
}
